<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:background="@drawable/ic_baseline_chevron_left_24"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"

            android:text="함께 줍깅 글쓰기"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="24dp"

            android:gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="15dp"

                android:text="\'함께 줍깅\'을 위해서는 공지와 소통을 위한 \'카카오톡 오픈 채팅방\'이 필요해요. 작성자분은 게시물 작성 이전에 오픈 채팅방을 만들어 주세요."
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:justificationMode="inter_word"

                android:gravity="center_vertical"
                android:background="@color/gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:text="지역 선택"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="20dp"

                android:gravity="bottom"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"

                android:text="지역을 선택해 주세요   ▼"
                android:textSize="14dp"
                android:textColor="@color/text_color_light"

                android:gravity="center_vertical"
                android:backgroundTint="@color/main_color_5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:text="제목"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="20dp"

                android:gravity="bottom"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="15dp"

                android:hint="제목을 입력해주세요."
                android:textColor="@color/text_color_light"
                android:textSize="14dp"

                android:background="@drawable/outline_rectangle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:text="활동 내용"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="18dp"

                android:gravity="bottom"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:background="@drawable/outline_rectangle"
                android:padding="15dp"

                android:hint="간단한 자기소개와 함께 활동 내용을 작성해 주세요."
                android:textColor="@color/text_color_light"
                android:textSize="14dp"
                android:gravity="start"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="인원"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        android:gravity="bottom"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="3명"
                        android:textColor="@color/text_color_light"
                        android:textSize="20dp"

                        android:gravity="bottom|right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="성별"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        android:gravity="bottom"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="아무나"
                        android:textColor="@color/text_color_light"
                        android:textSize="20dp"

                        android:gravity="bottom|right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="날짜"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        android:gravity="bottom"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="선택 >"
                        android:textColor="@color/text_color_light"
                        android:textSize="20dp"

                        android:gravity="bottom|right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="시간"
                        android:textColor="@color/text_color"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        android:gravity="bottom"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"

                        android:text="선택 >"
                        android:textColor="@color/text_color_light"
                        android:textSize="20dp"

                        android:gravity="bottom|right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="bottom"

                android:text="장소"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="15dp"

                android:hint="주소를 입력해 주세요"
                android:textColor="@color/text_color_light"
                android:textSize="14dp"

                android:background="@drawable/outline_rectangle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="bottom"

                android:text="카카오톡 오픈 채팅방 주소"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="15dp"

                android:hint="오픈 채팅방 주소를 꼭 입력해 주세요"
                android:textColor="@color/light_gray"
                android:textSize="14dp"

                android:background="@drawable/outline_rectangle"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"

                android:text="만들기"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>